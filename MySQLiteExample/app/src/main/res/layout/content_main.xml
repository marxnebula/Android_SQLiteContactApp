<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.dorfing.mysqliteexample.MainActivity"
    tools:showIn="@layout/activity_main">



    <TextView
        android:id="@+id/main_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:scrollbars = "vertical"
        android:gravity="center"
        android:layout_below="@+id/main_deletebutton"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/main_contactbutton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/contactbutton"
        android:layout_below="@+id/main_editnametext"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp" />

    <Button
        android:id="@+id/main_deletebutton"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:text="@string/deletebutton"
        android:gravity="center"
        android:layout_below="@+id/main_contactbutton"
        android:layout_centerHorizontal="true" />

    <!-- Displays keyboard when touched. User enters in name -->
    <EditText
        android:id="@+id/main_editnametext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="@string/name"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/main_editphonenunmbertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:hint="@string/phonenumber"
        android:gravity="center"
        android:layout_below="@+id/main_editnametext"
        android:layout_alignRight="@+id/main_contactbutton"
        android:layout_alignEnd="@+id/main_contactbutton" />




</RelativeLayout>
